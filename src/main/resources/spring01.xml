<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.train.dao.UserDao"/>
    <bean id="userService" class="com.train.service.UserService">

        <!--  业务对象注入  -->
        <property name="userDao" ref="userDao"></property>

    </bean>

    <!--  springIOC手动注入 set方法注入  -->

    <bean id="accountDao" class="com.train.dao.AccountDao"/>
    <bean id="accountService" class="com.train.service.AccountService">

        <!--  业务对象注入  -->
        <property name="accountDao" ref="accountDao"></property>

    </bean>

</beans>